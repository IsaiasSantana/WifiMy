<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/titulo_altura"
        android:background="@color/cinza_claro"
        android:gravity="center"
        android:text="@string/outras_informacoes"
        android:textColor="@color/cinza_claro2"
        android:textSize="@dimen/titulo_tamanho" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginLeft="@dimen/margin_16dp"
            android:layout_marginRight="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:orientation="vertical">

            <include
                android:id="@+id/rowNomeRede"
                layout="@layout/row_layout" />

            <include
                android:id="@+id/rowDns1"
                layout="@layout/row_layout" />

            <include
                android:id="@+id/rowDns2"
                layout="@layout/row_layout" />

            <include
                android:id="@+id/rowGateway"
                layout="@layout/row_layout" />

            <include
                android:id="@+id/rowLeaseDuration"
                layout="@layout/row_layout" />

            <include
                android:id="@+id/rowMascaraDeRede"
                layout="@layout/row_layout" />

            <include
                android:id="@+id/rowEnderecoServidor"
                layout="@layout/row_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8dp" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/banner_layout" />
</LinearLayout>